{
  "compilerOptions": {
    "lib": ["ES2021", "dom"],
    "esModuleInterop": true,
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "typeRoots": [
      "./src/@types",
      "node_modules/@types"
    ]
  }
}
